<Window x:Class="RPG_Manager.views.ChangeHpWidget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPG_Manager.views"
        mc:Ignorable="d"
        WindowStyle="None"     
        Style="{StaticResource defaultStyle}"
        WindowStartupLocation="Manual" 
        Left="900" Top="500"
        ResizeMode="NoResize"
        Title="ChangeHpWidget" Height="70" Width="160">
    <Grid Loaded="Grid_Loaded">
        <TextBox x:Name="HpModTextBox" HorizontalAlignment="Left" Width="90" Height="30" Margin="10,0,0,0" FontWeight="Bold" Padding="3" KeyDown="HpModTextBox_KeyDown" Background="#CCFFFFFF" />
        <Button x:Name="HpModButton" Style="{StaticResource boxButtonStyle}" Content ="OK" HorizontalAlignment="Left" Width="40" Height="30" Margin="110,0,0,0" Click="HpModButton_Click" />
    </Grid>
</Window>
